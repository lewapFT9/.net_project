        <h1 style="color: #333; font-family: Arial, sans-serif;">Welcome</h1>
        <h4 style="color: #555;">Hello, @ViewBag.Name!</h4>
        @Html.ActionLink("Add Movie", "AddMovie", "Movie") |
        @Html.ActionLink("Add Cinema Hall", "AddCinemaHall", "CinemaHall") |
        @Html.ActionLink("View Cinema Halls", "ViewCinemaHalls", "CinemaHall") |
        @Html.ActionLink("Add Screening", "CreateScreening", "Screening") |
        @Html.ActionLink("View Movies", "ViewMovies", "Movie") |
