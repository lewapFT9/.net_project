@model TicketReservationApplication.Models.AddCinemaHallModel

@{
    ViewData["Title"] = "AddCinemaHall";
}

<h1>AddCinemaHall</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddCinemaHall">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @if (ViewBag.Message != null)
            {
                <div class="form-group" , style="color: green;">@ViewBag.Message</div>
            }
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumberOfRows" class="control-label"></label>
                <input asp-for="NumberOfRows" class="form-control" />
                <span asp-validation-for="NumberOfRows" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SeatsPerRow" class="control-label"></label>
                <input asp-for="SeatsPerRow" class="form-control" />
                <span asp-validation-for="SeatsPerRow" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    @Html.ActionLink("Go back", "AdminPage", "Account") |
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
